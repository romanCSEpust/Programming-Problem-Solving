#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t; 
	cin>>t;
	while(t--)
	{
	    int N,M,A,B;
	    cin>>N>>M>>A>>B;
	    int x=(M-N*B)/(A-B);
	    if((M-N*B)%(A-B)==0)
	    {
	        if(x>=0 && x<=N)
	    cout<<"Yes";
	    else cout<<"No";
	        
	    }
	    else
	    cout<<"No";
	    cout<<endl;
	    
	}

}
